<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EvenementsActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_events_tile"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/tile_bg_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/plus"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="0dp"
        />


        <TextView
            android:id="@+id/statut_text"

            android:text="Ajouter Evenement"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"

            android:layout_width="fill_parent"
            android:layout_height="20dp"
         />
    </LinearLayout>

</RelativeLayout>
