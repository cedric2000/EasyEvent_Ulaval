<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_light"
    tools:context=".EvenementsActivity">

    <TextView
        android:id="@+id/events_empty"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:gravity="center"
        android:background="@android:color/white"

        android:text="Commencer par ajouter un evenement"
        android:textColor="@color/text_regular"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        />

    <ListView
        android:visibility="gone"
        android:id="@+id/listEvenements"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/text_light"
        android:dividerHeight="1dip"
        android:background="@color/text_light">
    </ListView>

    <LinearLayout

        android:id="@+id/add_button_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/flotting_btn">

        <ImageButton

            android:id="@+id/add_button"
            android:src="@drawable/plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:tint="@android:color/white"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>
