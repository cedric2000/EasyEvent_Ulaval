<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/item_student"

    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".ParticipantsActivity"
    >



    <!-- The 2-row textual layout -->
    <LinearLayout
        android:id="@+id/info_dep"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <!-- First row -->
        <TextView
            android:id="@+id/lib_dep"

            android:text="Appartement Boston"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:fontFamily="sans-serif"
            android:textStyle="normal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contactLayout"

            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            />

        <!-- Second row -->
        <TextView
            android:id="@+id/depenseurs"

            android:text="Colin"
            android:textSize="14sp"
            android:textColor="@color/text_regular"
            android:fontFamily="sans-serif"
            android:textStyle="normal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contactLayout"

            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/montant_depense"

        android:text="+ 200 â‚¬"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/goToDepenseLayout"

        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:id="@+id/goToDepenseLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/goToDepenseIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:src="@drawable/arrow_right"
            android:tint="@color/text_regular"
            />
    </LinearLayout>

</RelativeLayout>